{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs", // For Node.js
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true, // Important for AgentKit's package.json import
    "experimentalDecorators": true, // Required by AgentKit for @CreateAction
    "emitDecoratorMetadata": true   // Required by AgentKit for @CreateAction
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}